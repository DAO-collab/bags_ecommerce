<%- include ../partials/header %> <!-- Include the header partial -->

<%- include ../partials/categories-navbar %> <!-- Include the categories navbar partial -->

<div class="container">
  <div class="row">
    <!-- Contact Us Information Section -->
    <div class="col-lg-8 col-md-12 m-auto">
      <h1 class="mt-4 mb-4 text-center">Contact Us</h1>
      <!-- Flash message for success -->
      <% if (successMsg != null && successMsg) { %>
        <div id="success" class="alert alert-success">
          <%= successMsg %>
        </div>
      <% } %>
    </div>

    <!-- Introduction Section -->
    <div class="col-lg-8 col-md-12 text-justify m-auto">
      <div class="mt-4 mb-4">
        <!-- Introduction content -->
        <p>You are always welcome to contact us at any time! Feel free to email us or phone us using our contact details below<br />
          You can also visit us or call us at any time during our working hours from <i>Sunday to Thursday: 9 AM to 12 PM.</i> <br />
          We reply to our emails even during the weekends. So please do not hesitate to contact us.
        </p>
      </div>

      <!-- Email Contacts Section -->
      <div class="mt-4 mb-4">
        <p>
          <h6><i>Contact us by email:</i></h6>
        </p>
        <!-- Email addresses for general inquiries, orders problems, and technical support -->
      </div>

      <!-- Phone Contacts Section -->
      <div class="mt-4 mb-4">
        <p>
          <h6><i>Contact us by phone:</i></h6>
        </p>
        <!-- Phone numbers for call center and WhatsApp -->
      </div>
    </div>

    <!-- Contact Us Form Section -->
    <div class="col-lg-8 col-md-12 m-auto">
      <div class="mt-5 mb-4">
        <h2>Contact Us Form</h2>
        <!-- Error flash message -->
        <% if(errorMsg!=null && errorMsg.length>0) { %>
          <div id="flash-msg" class="alert alert-danger">
            <!-- Display error messages -->
            <% errorMsg.forEach((message) => { %>
              <p><%= message %></p>
            <% }) %>
          </div>
        <% } %>
        <!-- Contact form with fields for name, email, and message -->
        <form action="/pages/contact-us" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" class="form-control" name="name" id="name" required />
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" name="email" id="email" required />
          </div>
          <div class="form-group">
            <label for="message">Message contents</label>
            <textarea class="form-control" name="message" id="message" rows="5" placeholder="Please write your message here..." required></textarea>
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit" class="btn btn-primary button-style">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include ../partials/footer %> <!-- Include the footer partial -->
